<?xml version="1.0" encoding="utf-8"?>
    <!-- the parent view - provides the gray listfragment background color -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:background="@color/frame_background"
android:padding="0.5dp">

<!-- the innner view - provides the white rectangle -->
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/frame">

    <!-- the icon view -->
    <ImageView android:id="@+id/ivIcon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentLeft="true" />

    <!-- the container view for the title and description -->
    <TextView android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="kmlkkllklklk"
        android:layout_alignBottom="@+id/ivIcon2"
        android:layout_alignLeft="@+id/tvDescription"
        android:layout_alignStart="@+id/tvDescription" />

    <TextView android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:text="aaaaaaaaa"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/ivIcon"
        android:layout_toEndOf="@+id/ivIcon"
        android:layout_marginLeft="10dp" />

    <ImageView android:id="@+id/ivIcon2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="2dp"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:visibility="visible" />



</RelativeLayout>

</RelativeLayout>
