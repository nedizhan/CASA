<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mepsan.callcenter.casa.ArizaClass.FragmentArizaAciklama">

    <!-- TODO: Update blank fragment layout -->

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_aciklama"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/aciklama_ekle_btn"
        android:layout_alignEnd="@+id/aciklama_ekle_btn"
        android:layout_below="@+id/viev" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/aciklama_ekle_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/ic_aciklama_add" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ARIZA AÇIKLAMALARI"
        android:id="@+id/textView55"
        android:layout_alignTop="@+id/aciklama_ekle_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_above="@+id/list_aciklama"
        android:gravity="center" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="@color/colorPrimary"
        android:id="@+id/viev"
        android:layout_below="@+id/aciklama_ekle_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Arıza Açıklaması Eklenmemiştir!"
        android:id="@+id/textView14"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:visibility="gone" />
</RelativeLayout>
